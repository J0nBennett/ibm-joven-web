---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
	image?: string;
}

const base = import.meta.env.BASE_URL;
const {
	title,
	description = 'IBM Joven — Comunidad de jóvenes de la Iglesia Bautista Maranata en Luque, Paraguay. Fe, servicio y amistad.',
	image = `${base}logo.svg`,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site ?? 'https://J0nBennett.github.io');
const ogImage = new URL(image, canonicalURL);
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<style>
			html {
				scrollbar-gutter: stable;
			}
		</style>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="canonical" href={canonicalURL} />
		<meta name="generator" content={Astro.generator} />

		<!-- SEO primario -->
		<title>{title}</title>
		<meta name="description" content={description} />

		<!-- Open Graph / Facebook / WhatsApp -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImage} />
		<meta property="og:locale" content="es_PY" />
		<meta property="og:site_name" content="IBM Joven" />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImage} />

		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href={`${base}favicon_cross.svg`} />
	</head>
	<body class="bg-gray-50 flex flex-col min-h-screen font-sans">
		<Navigation />

		<main class="flex-grow container mx-auto px-4 py-8">
			<slot />
		</main>

		<Footer />
	</body>
</html>
