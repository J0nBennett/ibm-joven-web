---
import Layout from '../layouts/Layout.astro';
import EventoCard from '../components/EventoCard.astro';
import fs from 'node:fs/promises';
import path from 'node:path';

let eventos = [];

try {
  const eventosPath = path.join(process.cwd(), 'public', 'data', 'eventos.json');
  const eventosData = await fs.readFile(eventosPath, 'utf-8');
  eventos = JSON.parse(eventosData);
} catch (e) {
  console.error("Error loading data:", e);
}
---

<Layout title="Eventos y Actividades | IBM Joven ‚Äì Iglesia Bautista Maranata Luque" description="Calendario de eventos del ministerio juvenil IBM Joven. Reuni√≥n de J√≥venes los s√°bados 19:30 hs, Escuela Dominical y Culto Central los domingos en Luque, Paraguay.">
  <section class="max-w-3xl mx-auto">
    <h1 class="text-4xl font-black text-white mb-6 border-b border-white/5 pb-4 tracking-tight">Calendario de <span class="text-brand-vibrant">Eventos</span></h1>



    <div class="space-y-6">
      
      <!-- EVENTS PINNED: Weekly Schedule -->
      <article class="glass-card rounded-2xl border border-white/5 overflow-hidden relative group hover:border-purple-500/30 transition-all duration-500">
          <div class="absolute top-0 right-0 bg-purple-600 text-white text-[10px] font-black px-3 py-1 rounded-bl-lg uppercase tracking-widest z-20">Fijo</div>
          
          <div class="flex flex-col md:flex-row relative z-10">
            <div class="bg-purple-900/30 text-purple-300 flex flex-col items-center justify-center p-6 md:w-40 shrink-0 text-center border-b md:border-b-0 md:border-r border-white/5">
                <span class="text-5xl mb-2 text-glow">üìÖ</span>
                <span class="font-black text-xs tracking-[0.2em] uppercase leading-tight">Horarios<br>Semanales</span>
            </div>

            <div class="p-6 flex-grow">
                <h3 class="text-2xl font-black text-white mb-6 tracking-tight">Reuniones de Iglesia</h3>
                
                <div class="space-y-4">
                    {/* Helper to generate recurring event links */}
                    {(() => {
                        const getLink = (title, dayIndex, time) => {
                            // dayIndex: 0=Sun, 1=Mon ... 6=Sat
                            const now = new Date();
                            const resultDate = new Date();
                            resultDate.setDate(now.getDate() + (dayIndex + 7 - now.getDay()) % 7);
                            // If today is the day and time passed, move to next week
                            const [h, m] = time.split(':');
                            if (resultDate.getDay() === now.getDay()) {
                                if (now.getHours() > parseInt(h) || (now.getHours() === parseInt(h) && now.getMinutes() >= parseInt(m))) {
                                    resultDate.setDate(resultDate.getDate() + 7);
                                }
                            }
                            
                            const format = (d) => d.toISOString().replace(/-|:|\.\d\d\d/g, "");
                            
                            const startD = new Date(resultDate);
                            startD.setHours(parseInt(h), parseInt(m), 0);
                            const endD = new Date(startD.getTime() + 90 * 60000); // 1.5 hours
                            
                            return `https://calendar.google.com/calendar/render?action=TEMPLATE&text=${encodeURIComponent(title + " - IBM Joven")}&dates=${format(startD)}/${format(endD)}&details=Te%20esperamos%20en%20la%20iglesia!&location=Iglesia%20Bautista%20Maranata%2C%20Luque`;
                        };

                        const items = [
                            { day: "S√°bados", time: "19:30", title: "Reuni√≥n de J√≥venes", dayIdx: 6 },
                            { day: "Domingos", time: "08:30", title: "Escuela Dominical", dayIdx: 0 },
                            { day: "Domingos", time: "09:15", title: "Culto Central", dayIdx: 0 },
                            { day: "Domingos", time: "18:00", title: "Deportes", dayIdx: 0 },
                        ];

                        return items.map(item => (
                            <div class="flex flex-col sm:flex-row sm:items-center justify-between p-4 bg-white/5 rounded-xl border border-white/5 hover:border-purple-500/50 transition-all group/item gap-3">
                                <div class="flex items-center gap-4">
                                    <div class="bg-slate-900 p-2 rounded-lg shadow-inner text-purple-400 font-black text-center min-w-[3.5rem] border border-white/5 group-hover/item:border-purple-500/30 transition-colors">
                                        <div class="text-[10px] uppercase text-slate-500 tracking-tighter">{item.day.substring(0,3)}</div>
                                        <div class="text-lg">{item.time}</div>
                                    </div>
                                    <div>
                                        <h4 class="font-bold text-slate-100">{item.title}</h4>
                                        <p class="text-xs text-slate-500">Iglesia Bautista Maranata</p>
                                    </div>
                                </div>
                                
                                <a
                                    href={getLink(item.title, item.dayIdx, item.time)}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="inline-flex items-center justify-center text-sm font-medium text-purple-700 bg-purple-100 hover:bg-purple-200 px-4 py-2 rounded-md transition-colors whitespace-nowrap"
                                >
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11v6m0 0l-3-3m3 3l3-3" />
                                    </svg>
                                    Agendar
                                </a>
                            </div>
                        ));
                    })()}
                </div>
            </div>
          </div>
      </article>

      {eventos.length > 0 ? (
        eventos.map(evento => (
          <EventoCard 
            id={evento.id}
            titulo={evento.titulo}
            fecha={evento.fecha}
            hora={evento.hora}
            lugar={evento.lugar}
            descripcion_md={evento.descripcion_md}
            className="border-l-4 border-l-blue-500"
          />
        ))
      ) : (
        <p class="text-slate-500 text-center py-10 font-medium">No hay eventos pr√≥ximos.</p>
      )}
    </div>

    <!-- SEO: texto introductorio con keywords locales -->
    <div class="mt-16 pt-8 border-t border-white/5">
      <p class="text-slate-500 text-sm leading-relaxed text-center max-w-2xl mx-auto italic">
        Cada semana en la <strong>Iglesia Bautista Maranata de Luque, Paraguay</strong>, nos reunimos
        para adorar y crecer juntos. Los <strong>s√°bados a las 19:30 hs</strong> tenemos nuestra
        Reuni√≥n de J√≥venes, y los domingos contamos con Escuela Dominical (08:30 hs),
        Culto Central (09:15 hs) y Deportes (18:00 hs). Tambi√©n organizamos eventos especiales
        a lo largo del a√±o: campamentos, retiros, actividades deportivas y m√°s.
      </p>
    </div>
  </section>
</Layout>
