---
import Layout from '../layouts/Layout.astro';
import fs from 'node:fs/promises';
import path from 'node:path';

let albums = [];

try {
  const galeriaPath = path.join(process.cwd(), 'public', 'data', 'galeria.json');
  const data = await fs.readFile(galeriaPath, 'utf-8');
  albums = JSON.parse(data);
} catch (e) {
  console.error("Error loading gallery data:", e);
  // Fallback to empty array
}
---

<Layout title="Galería - IBM Joven">
    <section class="max-w-6xl mx-auto">
        <h1 class="text-4xl font-bold text-gray-900 mb-2 text-center">Galería de Fotos</h1>
        <p class="text-center text-gray-600 mb-12">Revive nuestros mejores momentos.</p>

        {albums.length > 0 ? (
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                {albums.map((album) => (
                    <a href={album.url_album} target="_blank" rel="noopener noreferrer" class="group relative bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100 block">
                        <div class="aspect-video bg-gray-200 relative overflow-hidden">
                            {album.foto_portada ? (
                                <img 
                                    src={album.foto_portada} 
                                    alt={album.titulo} 
                                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                                />
                            ) : (
                                <div class="w-full h-full flex flex-col items-center justify-center text-gray-400 bg-gray-100 group-hover:bg-slate-100 transition">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mb-2 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                    <span class="text-sm font-medium">Ver Álbum</span>
                                </div>
                            )}
                            
                            <!-- Overlay -->
                            <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-colors duration-300"></div>
                        </div>
                        
                        <div class="p-5">
                            <h3 class="font-bold text-xl text-gray-900 mb-2 group-hover:text-blue-700 transition">{album.titulo}</h3>
                            <div class="flex items-center text-blue-600 font-medium text-sm">
                                <span>Ver fotos en Drive/Photos</span>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transform group-hover:translate-x-1 transition" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                </svg>
                            </div>
                        </div>
                    </a>
                ))}
            </div>
        ) : (
            <div class="text-center py-20 bg-gray-50 rounded-xl border border-dashed border-gray-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <p class="text-lg text-gray-500">Pronto subiremos fotos de nuestras actividades.</p>
            </div>
        )}
    </section>
</Layout>
