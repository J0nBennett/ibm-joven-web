---
import Layout from '../layouts/Layout.astro';
import AnuncioCard from '../components/AnuncioCard.astro';
import fs from 'node:fs/promises';
import path from 'node:path';

let anuncios = [];

try {
  const anunciosPath = path.join(process.cwd(), 'public', 'data', 'anuncios.json');
  const anunciosData = await fs.readFile(anunciosPath, 'utf-8');
  anuncios = JSON.parse(anunciosData);
} catch (e) {
  console.error("Error loading data:", e);
}
---

<Layout title="Anuncios - IBM Joven" description="Últimas novedades y anuncios del ministerio de jóvenes IBM Joven de la Iglesia Bautista Maranata.">
  <section class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-900 mb-8 border-b pb-4">Anuncios y Novedades</h1>

    <div class="grid gap-6 md:grid-cols-2">
      {anuncios.length > 0 ? (
        // Sort: Pinned first, then by date descending (already sorted by date in sync script)
        [...anuncios].sort((a,b) => (b.esFijo ? 1 : 0) - (a.esFijo ? 1 : 0)).map(anuncio => (
          <AnuncioCard
            id={anuncio.id}
            titulo={anuncio.titulo}
            fecha={anuncio.fecha}
            categoria={anuncio.categoria}
            resumen={anuncio.resumen}
            contenido_md={anuncio.contenido_md}
            esFijo={anuncio.esFijo}
            className={anuncio.esFijo ? "md:col-span-2 ring-2 ring-blue-500/20" : ""}
          />
        ))
      ) : (
        <p class="text-gray-500 col-span-2 text-center py-10">No hay anuncios disponibles.</p>
      )}
    </div>
  </section>
</Layout>
