// Agrupar por mes
const cumpleanosPorMes = [];
if (cumpleanosFiltrados.length > 0) {
  const mesesRelacionados = [...new Set(cumpleanosFiltrados.map(c => parseInt(c.mes)))];
  mesesRelacionados.forEach(m => {
    cumpleanosPorMes.push({
