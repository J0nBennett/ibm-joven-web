---
interface Props {
  cita: string;
  pasaje: string;
  texto_meditacion?: string;
}

const { cita, pasaje, texto_meditacion } = Astro.props;
const hoy = new Date().toLocaleDateString('es-AR', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' });
