---
import Logo from './Logo.astro';
---
<nav class="sticky top-0 z-50 bg-slate-900 text-white shadow-lg backdrop-blur-md bg-opacity-95">
    <div class="container mx-auto px-4 py-4 flex justify-between items-center">
        <a href="/" class="hover:text-blue-200 transition">
            <Logo />
        </a>
        
        <!-- Desktop Menu -->
        <ul class="flex space-x-2 hidden md:flex">
            {
                [
                    { name: 'Inicio', path: '/' },
                    { name: 'Anuncios', path: '/anuncios' },
                    { name: 'Eventos', path: '/eventos' },
                    { name: 'Galería', path: '/galeria' },
                    { name: 'Nosotros', path: '/nosotros' },
                    { name: 'Contacto', path: '/contacto' },
                ].map(link => {
                    const isActive = Astro.url.pathname === link.path || (link.path !== '/' && Astro.url.pathname.startsWith(link.path));
                    return (
                        <li>
                            <a 
                                href={link.path} 
                                class={`px-4 py-2 rounded-lg transition-all duration-300 font-medium ${
                                    isActive 
                                    ? 'bg-white/10 backdrop-blur-md border border-white/20 text-white shadow-[0_0_15px_rgba(255,255,255,0.1)]' 
                                    : 'hover:bg-white/5 hover:text-blue-200 text-slate-300'
                                }`}
                            >
                                {link.name}
                            </a>
                        </li>
                    );
                })
            }
        </ul>

        <!-- Mobile Menu Button (Hamburger) - Implementation required JS for toggle, keeping simple for now -->
        <div class="md:hidden">
            <a href="/anuncios" class="text-sm font-semibold bg-slate-800 py-2 px-3 rounded hover:bg-slate-700 transition">Menú</a>
        </div>
    </div>
</nav>
