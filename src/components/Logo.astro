---
interface Props {
  className?: string;
  color?: string; // e.g. "text-white", "text-blue-500"
}

const { className = "h-8 w-auto", color = "text-white" } = Astro.props;
---

<div class={`flex items-center gap-3 ${color} ${className}`}>
  <!-- Logo: 3 Triangles forming a Trinity 'M' inside a circle -->
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" class="h-10 w-10 overflow-visible">
      <!-- Background Circle -->
      <circle cx="50" cy="50" r="48" fill="#3269b3" />
      
      <!-- Triangle 1: Left Pillar -->
      <path d="M22 68 L48 68 L35 42 Z" fill="white" />
      
      <!-- Triangle 2: Right Pillar -->
      <path d="M52 68 L78 68 L65 42 Z" fill="white" />
      
      <!-- Triangle 3: Center Inverted -->
      <path d="M35 30 L65 30 L50 56 Z" fill="white" />
  </svg>
  
  <span class="font-extrabold tracking-tight text-xl leading-none flex flex-col items-start justify-center">
    <span class="text-inherit">IBM</span>
    <span class="font-light text-sm tracking-widest opacity-80 text-inherit/70">JOVEN</span>
  </span>
</div>
